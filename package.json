{
  "name": "patternstore",
  "displayName": "PatternStore",
  "description": "Save and recall reusable regex find/replace pairs in VS Code",
  "version": "0.1.0",
  "publisher": "JoachimDunkel",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "patternStore.manage",
        "title": "PatternStore: Manage Patterns",
        "icon": "$(settings-gear)"
      }
    ],
    "configuration": {
      "title": "PatternStore",
      "properties": {
        "patternStore.savedPatterns": {
          "type": "array",
          "default": [],
          "description": "Global patterns available in all workspaces",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "find": {
                "type": "string"
              },
              "replace": {
                "type": "string"
              },
              "flags": {
                "type": "object"
              },
              "filesToInclude": {
                "type": "string",
                "description": "Files to include (glob pattern, e.g. '*.ts,*.js' or 'src/**')"
              },
              "filesToExclude": {
                "type": "string",
                "description": "Files to exclude (glob pattern, e.g. 'node_modules/**,dist/**')"
              },
              "scope": {
                "type": "string"
              }
            }
          }
        },
        "patternStore.workspacePatterns": {
          "type": "array",
          "default": [],
          "description": "Workspace-specific patterns",
          "scope": "resource",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "find": {
                "type": "string"
              },
              "replace": {
                "type": "string"
              },
              "flags": {
                "type": "object"
              },
              "filesToInclude": {
                "type": "string",
                "description": "Files to include (glob pattern, e.g. '*.ts,*.js' or 'src/**')"
              },
              "filesToExclude": {
                "type": "string",
                "description": "Files to exclude (glob pattern, e.g. 'node_modules/**,dist/**')"
              },
              "scope": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "keybindings": [
      {
        "command": "patternStore.manage",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "patternStore.manage",
          "when": "view == workbench.view.search",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}